@model MyEvernote.WebApp.ViewModels.OkViewModel

@{
    ViewBag.Title = Model.Title;
}

<!------ Include the above in your HEAD tag ---------->
<link href="~/Content/login-register.css" rel="stylesheet" />
<script src="~/Scripts/login-register.js"></script>
<!------ Include the above in your HEAD tag ---------->
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="container">

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <fieldset>
                    <h1>@Model.Header</h1>
                    <hr class="colorgraph" />
                    <div class="text-success">
                        <h2> <span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;&nbsp;@Model.Title....</h2>
                        <hr />
                        <p class="text-justify">
                            @*Hesabınız aktifleştirilirken hata oluştu.<br />
                                Kullanıcı daha önce aktif edilmiş olabilir ya da böyle bir kullanıcı bulunmamış olabilir.<br />
                                Lütfen e-posta adresini kontrol ediniz.*@
                            @foreach (string msg in Model.Items)
                            {
                                @msg<br>
                            }

                        </p>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }

}

<script>

    $(function () {

        @Html.Raw(js);

    })

</script>

