@using MyEvernote.Entities
@model EvernoteUser
@{
    ViewBag.Title = "Profil Düzenle";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">
        @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="col-md-3">
                <img src="~/images/@Model.ProfileImageFile" class="img-circle img-responsive" width="128" height="128" />
                @Html.HiddenFor(model => model.ProfileImageFile)
                <br /><br />
                <input type="file" name="ProfileImageFile" id="ProfileImageFile" class="form-control" /><br />
                <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
            </div>

            <div class="col-md-6">

                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "form-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Usurname, htmlAttributes: new { @class = "form-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Usurname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label col-md-3" })
                    <div class="col-md-9">
                        @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })*@
                        <input type="password" name="Password" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <button type="submit" class="btn btn-success">Güncelle</button>
                        <a href="/Home/ShowProfile" class="btn btn-default">İptal</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                &nbsp;
            </div>
        </div>
    }

    </div>
</div>

