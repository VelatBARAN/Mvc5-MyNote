@using MyEvernote.WebApp
@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}
    
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h3>Kategori Ekle</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <p>
            @Bootstrap.LinkButton("/Category/Create","info","btn-sm","Yeni Kategori","plus","Yeni Kategori")
            @*<a href="/Category/Create" class="btn btn-info" title="Yeni Kategori"> <span class="glyphicon glyphicon-plus"></span> Yeni Kategori</a>*@
        </p>

        <table class="table table-striped table-bordered table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsurname)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsurname)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

                        <div class="col-md-2 text-right">
                            <div class="btn-group">
                                <a class="btn dropdown-toggle btn-success" data-toggle="dropdown" href="#">
                                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                                    Seçenekler
                                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/Category/Edit/@item.Id" title="Düzenle">
                                            <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenle
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Category/Details/@item.Id" title="Detay">
                                            <span class="glyphicon glyphicon-dashboard">&nbsp;</span>Detay
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Category/Delete/@item.Id" title="Sil" onclick="return confirm('Kategoriyi silmek istediğinize emin misiniz?')">
                                            <span class="glyphicon glyphicon-remove">&nbsp;</span>Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>



