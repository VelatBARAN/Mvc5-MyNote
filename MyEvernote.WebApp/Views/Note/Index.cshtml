@model IEnumerable<MyEvernote.Entities.Note>

@{
    ViewBag.Title = "Notlar";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h3>Notlar</h3>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <p>
            @Bootstrap.LinkButton("/Note/Create", "info", "btn-sm", "Yeni Not", "plus", "Yeni Not")
        </p>

        <table class="table table-striped table-bordered table-responsive table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsurname)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsurname)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@

                        <div class="col-md-2 text-right">
                            <div class="btn-group">
                                <a class="btn dropdown-toggle btn-success" data-toggle="dropdown" href="#">
                                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                                    Seçenekler
                                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/Note/Edit/@item.Id" title="Düzenle">
                                            <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenle
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Note/Details/@item.Id" title="Detay">
                                            <span class="glyphicon glyphicon-dashboard">&nbsp;</span>Detay
                                        </a>
                                    </li>
                                    <li>
                                        <a href="" title="Yorumlar" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                                            <span class="glyphicon glyphicon-comment">&nbsp;</span>Yorumlar
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Note/Delete/@item.Id" title="Sil" onclick="return confirm('Notu silmek istediğinize emin misiniz?')">
                                            <span class="glyphicon glyphicon-remove">&nbsp;</span>Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<!-- Modal -->
@Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<link href="~/Content/Site.css" rel="stylesheet" />

<!--Comment .js-->
<script src="~/Scripts/comment.js"></script>